<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.POSCashier" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.POSCashier.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyFancyTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
    </style>

    <style name="Theme.Pharmacy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Pharmacy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="myTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">1dp</item>
        <item name="boxCornerRadiusBottomEnd">1dp</item>
        <item name="boxCornerRadiusTopStart">1dp</item>
        <item name="boxCornerRadiusTopEnd">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">#000000</item>
        <item name="boxStrokeColor">#4CAF50</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="colorAccent">#000000</item>
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#000000</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/backgroud</item>
    </style>

    <style name="SpinnerDatePickerDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode" tools:targetApi="lollipop">spinner</item>
    </style>

    <style name="TextLabelDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="boxCornerRadiusBottomStart">1dp</item>
        <item name="boxCornerRadiusBottomEnd">1dp</item>
        <item name="boxCornerRadiusTopStart">1dp</item>
        <item name="boxCornerRadiusTopEnd">1dp</item>
        <item name="boxStrokeColor">#000000</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="colorAccent">#000000</item>
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#000000</item>

    </style>

    <style name="Theme.POSCashier.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.POSCashier.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>