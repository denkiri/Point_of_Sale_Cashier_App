<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:elevation="14dp"
    app:cardCornerRadius="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/paymentMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:text="Cash"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorCost" />
        <TextView
            android:id="@+id/invoiceNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentMode"
            android:padding="5dp"
            android:textSize="12sp"
            android:gravity="left"
            android:text="RS-234568"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/transactionDate"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentMode"
            android:padding="5dp"
            android:textSize="12sp"
            android:gravity="center"
            android:text="Date:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paymentMode"
            android:padding="5dp"
            android:textSize="12sp"
            android:layout_toRightOf="@id/transactionDate"
            android:text="23/01/2021"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@android:color/black"  />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_below="@+id/invoiceNumber"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Name:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/customerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/invoiceNumber"
            android:gravity="right"
            android:layout_marginLeft="60dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:padding="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/name"
            android:text="Dennis Kirimi Gitonga"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/black"
            android:layout_marginStart="60dp" />
        <TextView
            android:id="@+id/totalSales"
            android:layout_width="wrap_content"
            android:layout_below="@+id/name"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Total Sales:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent"
        />
        <TextView
            android:id="@+id/sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@id/name"
            android:padding="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/totalSales"
            android:text="50"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorAccent"  />
        <TextView
            android:id="@+id/bal"
            android:layout_width="wrap_content"
            android:layout_below="@+id/totalSales"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="Balance:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorCost" />
        <TextView
            android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@id/totalSales"
            android:padding="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/bal"
            android:text="50"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorCost"  />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/receipt"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/purple_500"
            android:text="Roll Back"
            android:layout_below="@id/totalSales"
            android:textAppearance="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="5dp"
            app:rippleColor="@color/colorPrimary"

            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>